/*add by yuxinwei*/
.page-container{
  width: 100%;
  height: 100%; 
 display: flex; 
 flex-direction: column; 
 box-sizing: border-box; 
 padding-top: 10rpx; 
 padding-bottom: 10rpx; 
}

.mainItemView{
  width: 100%;
  display: flex;
  padding-left: 16rpx;
  color: #000000;
  font-weight: bold;
  background-color: #F6F6F6;
  padding-top: 12rpx;
  padding-bottom: 12rpx;
}

.subItemContainer{ 
  margin-top: 12rpx;
  margin-bottom: 12rpx;
  justify-content: flex-start;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;/*内容多的时候换行*/
}

.subItemView{ 
  color: #888888;
  width: 30%;
  margin-top: 12rpx;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  margin-left: 3%;
  background: #F6F6F6;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  border-radius: 6%;
  border-color: #FF00FF;
}
